  "elements": [
    {
      "type": "Control",
      "label": "Unique Identifier",
      "scope": "#/properties/id"
    },
    {
      "type": "Categorization",
      "elements": [
        {
          "type": "Category",
          "label": "Individual",
          "elements": [
            {
              "type": "VerticalLayout",
